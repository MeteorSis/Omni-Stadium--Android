<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="skhu.cse.network.omni_stadium">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait">
            <!--
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            이거 둘다 넣으면 화면 회전 막힘
            -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="회원가입"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SidActivity"
            android:label="아이디 찾기"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SpwActivity"
            android:label="비밀번호 찾기"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".MenuActivity"
            android:label="메인 메뉴"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ReservActivity"
            android:label="예매 기능"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".NFCActivity"
            android:label="NFC 기능"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".StreamingActivity"
            android:label="스트리밍 기능"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"/>


        <activity
            android:name=".OrderActivity"
            android:label="식음료 주문 기능"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:screenOrientation="portrait"/>



    </application>

</manifest>