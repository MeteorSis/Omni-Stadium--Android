<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="skhu.cse.network.omni_stadium.FriedChicken">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tvfried_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:text="후라이드 치킨"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="18dp" />

        <TextView
            android:id="@+id/tvfried_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="황금빛 파우더가 선사하는 잊을 수 없는 바삭바삭함과
                        육즙 가득 퍼지는 부드러운 속살이 환상적인 맛!"
            android:textAlignment="center"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/tvfried_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="19dp">


        <TextView
            android:id="@+id/tvLcost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="가격"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvfried_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="16000원" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tvfried_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수량"
            android:layout_marginLeft="50dp"/>

        <Button
            android:id="@+id/btfried_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="장바구니 담기" />
    </RelativeLayout>


</RelativeLayout>
