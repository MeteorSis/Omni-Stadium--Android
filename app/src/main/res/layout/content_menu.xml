<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="skhu.cse.network.omni_stadium.MenuActivity"
    tools:showIn="@layout/app_bar_menu">

    <TextView
        android:id="@+id/tvtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="[티켓정보]"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/table_border"
        android:stretchColumns="2">

        <TableRow>

            <TextView
                android:id="@+id/tvticket_idname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="티켓번호"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvticket_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="105dp"
                android:text="30" />

        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvuser_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예매자"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvbname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:text="신솔비" />
        </TableRow>


        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvsector_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구역"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvsector_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:text="중앙 블루석A " />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvrow_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="열"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvrow_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:text="1열" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvseat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좌석"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvseat_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:text="1석" />
        </TableRow>


    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view5"
            android:layout_width="0.4dp"
            android:layout_height="215dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="false"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="102dp"
            android:background="#131212"
            android:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>



