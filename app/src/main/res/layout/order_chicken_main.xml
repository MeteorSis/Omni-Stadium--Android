            android:text="곡물치킨" />

        <TextView
            android:id="@+id/tvgokmul_cost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="18000원" />

        </LinearLayout>


        <ImageView
            android:id="@+id/ivhoney"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="212dp"
            android:layout_height="130dp"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvhoney_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="허니갈릭스 치킨" />

            <TextView
                android:id="@+id/tvhoney_cost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="19000원" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivcheeze"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="212dp"
            android:layout_height="130dp"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvcheeze_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="치즐링 치킨" />

            <TextView
                android:id="@+id/tvcheeze_cost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="19000원" />

        </LinearLayout>


    </GridLayout>
</ScrollView>
