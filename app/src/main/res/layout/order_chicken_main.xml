                android:text="18000원" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivcurrychicken"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="212dp"
            android:layout_height="130dp"
            android:layout_margin="20dp"
            android:orientation="vertical">
